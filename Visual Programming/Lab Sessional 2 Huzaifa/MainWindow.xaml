<Window x:Class="Lab_Sessional_2_Huzaifa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_Sessional_2_Huzaifa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Label>name:</Label>
        <TextBox x:Name="nameBox"></TextBox>
        <Label>regNo:</Label>
        <TextBox x:Name="regBox"></TextBox>
        <Button Click="addRecord">Add</Button>
        
        <Label>Search:</Label>
        <TextBox x:Name="keyword"></TextBox>
        <Button Click="search">Search</Button>
        
        <DataGrid x:Name="dataGrid"></DataGrid>
        
    </Grid>
</Window>
